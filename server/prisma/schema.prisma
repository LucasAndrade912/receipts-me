// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  google_id String @id
  email     String @unique
  name      String
  avatar    String // Will be storaged as URL to google storage

  recipes    Recipe[]
  comment    Comment[]
  bookMarked Bookmarked[]
}

model Recipe {
  cod_recipe         String   @id @default(uuid())
  name_recipe        String
  step_by_step       String
  date_register      DateTime
  prep_time_min      Int
  prep_time_max      Int
  cape_picture       String // Also storaged as a URL (same applis to the aditional ones)
  aditional_picture1 String?
  aditional_picture2 String?

  User      User   @relation(fields: [google_id], references: [google_id])
  google_id String

  comment           Comment[]
  bookMarked        Bookmarked[]
  Recipe_Ingredient Recipe_Ingredient[]
  Recipe_Category   Recipe_Category[]
}

model Comment {
  User      User   @relation(fields: [google_id], references: [google_id])
  google_id String

  Recipe     Recipe @relation(fields: [cod_recipe], references: [cod_recipe])
  cod_recipe String

  @@id([google_id, cod_recipe])
}

model Bookmarked {
  User      User   @relation(fields: [google_id], references: [google_id])
  google_id String

  Recipe     Recipe @relation(fields: [cod_recipe], references: [cod_recipe])
  cod_recipe String

  date_bookmarked DateTime

  @@id([google_id, cod_recipe])
}

model Category {
  cod_category    String            @id @default(uuid())
  name_category   String
  Recipe_Category Recipe_Category[]
}

model Ingredient {
  cod_ingredient    String              @id @default(uuid())
  name_ingredient   String
  Recipe_Ingredient Recipe_Ingredient[]
}

model Recipe_Ingredient {
  Recipe     Recipe @relation(fields: [cod_recipe], references: [cod_recipe])
  cod_recipe String

  Ingredient     Ingredient @relation(fields: [cod_ingredient], references: [cod_ingredient])
  cod_ingredient String

  @@id([cod_recipe, cod_ingredient])
}

model Recipe_Category {
  Recipe     Recipe @relation(fields: [cod_recipe], references: [cod_recipe])
  cod_recipe String

  Category     Category @relation(fields: [cod_category], references: [cod_category])
  cod_category String

  @@id([cod_recipe, cod_category])
}
